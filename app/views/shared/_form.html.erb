<%= form_with model: @article do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :slug %>
    <%= form.text_field :slug %>
    <%= form.label :published_at %>
    <%= form.date_select :published_at %>
    <%= form.rich_text_area :content %>
    <%= form.submit %>
  </div>
<% end %>
